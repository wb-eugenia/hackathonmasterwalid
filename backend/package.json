{
  "name": "restaurant-reviews-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API pour la gestion des avis restaurants et système de fidélité",
  "main": "src/server.js",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "db:migrate": "wrangler d1 migrations apply restaurant-reviews-db",
    "db:migrate:local": "wrangler d1 migrations apply restaurant-reviews-db --local",
    "db:create": "wrangler d1 create restaurant-reviews-db",
    "deploy": "wrangler deploy",
    "deploy:preview": "wrangler deploy --env preview",
    "tail": "wrangler tail"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "itty-router": "^4.2.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "wrangler": "^3.19.0"
  }
}
